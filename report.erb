<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <link rel="stylesheet" href="css/styles.css" media="screen" title="no title" charset="utf-8">

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
 <script type="text/javascript">
   google.charts.load('current', {'packages':['corechart']});
   google.charts.setOnLoadCallback(drawChart);
   function drawChart() {

     var data = google.visualization.arrayToDataTable([
       ['Pilot', 'Total'],
       ['Bender',     <%= bender_total %>],
       ['Leela',      <%= leela_total %>],
       ['Fry',  <%= fry_total %>],
       ['Amy', <%= amy_total %>]
     ]);

     var options = {
       title: 'Shipments'
     };

     var chart = new google.visualization.PieChart(document.getElementById('piechart'));

     chart.draw(data, options);
   }
 </script>


  </head>
  <body>

    <h1>Total Revenue: <%= total_revenue %></h1>


    <div class="wrapper">

      <h2>Bonuses</h2>
      <ul>
        <li>Leela (<%= leela_count %>): <%= leela_total * 0.1 %></li>
        <li>bender (<%= bender_count %>): <%= bender_total * 0.1 %></li>
        <li>amy (<%= amy_count %>): <%= amy_total * 0.1 %></li>
        <li>fry (<%= fry_count %>): <%= fry_total * 0.1 %></li>
      </ul>

      <h2>Revenue By Planet</h2>

      <table>
        <thead>
          <tr>
            <th>
              Planet Name
            </th>
            <th>
              Total
            </th>
          </tr>
        </thead>
        <tbody>
          <% revenue_by_planet.each do |hash| %>
            <tr>
              <td>
                <%= hash["name"] %>
              </td>
              <td>
                <%= hash["total"] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <ul>

      </ul>

      <h2>Shipments</h2>
      <table>
        <thead>
          <tr>
            <th>
              Destination
            </th>
            <th>
              Shipment
            </th>
            <th>
              Crates
            </th>
            <th>
              Money
            </th>
          </tr>
        </thead>
        <tbody>
          <% shipments.each do |shipment| %>
            <tr>
              <td>
                <%= shipment["Destination"] %>
              </td>
              <td>
                <%= shipment["Shipment"] %>
              </td>
              <td>
                <%= shipment["Crates"] %>
              </td>
              <td>
                <%= shipment["Money"] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div id="piechart" style="width: 900px; height: 500px;"></div>

      <img src="https://media.giphy.com/media/llQ1ejwxR6o0w/giphy.gif" alt="" />

    </div>

  </body>
</html>
